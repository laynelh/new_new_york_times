{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "headers": [
      {
        "source": "**/*.css",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "no-cache"
          }
        ]
      }
    ]
  },

  "emulators": {
    "hosting": {
      "port": 8000,
      "host": "127.0.0.1"
    },
    "ui": {
      "enabled": true,
      "hosting": {
        "port": 4500
      }
    },
    "singleProjectMode": false
  }
}